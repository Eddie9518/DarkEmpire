<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="1">

    <ImageView
        android:src="@drawable/frame"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_weight="0.59"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩家暱稱 : "
        android:id="@+id/title_name"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="50dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩家信箱 : "
        android:id="@+id/title_mail"
        android:textSize="25dp"
        android:layout_below="@+id/title_name"
        android:layout_alignLeft="@+id/title_name"
        android:layout_alignStart="@+id/title_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="馬納數值 : "
        android:id="@+id/title_mana"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/personal_email"
        android:layout_marginLeft="50dp"
        android:textSize="25dp"
        android:layout_alignParentBottom="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personal_id"
        android:layout_above="@+id/title_mail"
        android:layout_toRightOf="@+id/title_name"
        android:layout_toEndOf="@+id/title_name"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personal_email"
        android:layout_below="@+id/title_mail"
        android:layout_alignStart="@+id/title_mail"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/title_mail"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遊戲等級 : "
        android:id="@+id/title_lev"
        android:layout_below="@+id/title_mana"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/title_mana"
        android:layout_alignLeft="@id/title_mana"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遊戲經驗 : "
        android:id="@+id/title_exp"
        android:layout_below="@id/title_lev"
        android:layout_alignStart="@id/title_lev"
        android:layout_alignLeft="@id/title_lev"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personal_mana"
        android:layout_above="@+id/title_lev"
        android:layout_toRightOf="@+id/title_mana"
        android:layout_toEndOf="@+id/title_mana"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personal_lev"
        android:layout_above="@id/title_exp"
        android:layout_toRightOf="@id/title_lev"
        android:layout_toEndOf="@id/title_lev"
     android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personal_exp"
        android:layout_below="@id/personal_lev"
        android:layout_toRightOf="@id/title_exp"
        android:layout_toEndOf="@id/title_exp"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新資料"
        android:textColor="#FFFFFF"
        android:id="@+id/edit_person_inf"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_edit"/>
    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/my_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:elevation="4dp"-->
        <!--android:theme="@style/ThemeOverlay.AppCompat.ActionBar"-->
        <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>-->

</RelativeLayout>